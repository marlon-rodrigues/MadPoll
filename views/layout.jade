doctype html
html(ng-app='Polls')
  head
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")

    title= title
    <!-- load stylesheets -->
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto:400,300,700|Roboto+Condensed:400,300,700')
    link(rel='stylesheet', href='https://code.jquery.com/ui/1.12.0/themes/base/jquery-ui.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')

    <!-- load js libraries -->
    <!--script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')-->
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js')
    script(src='https://code.jquery.com/ui/1.12.0/jquery-ui.js')
    script(src='/libs/socket.io/socket.io.js')
    script(src='/libs/cookie/jquery.cookie.js')
    script(src='/javascripts/global.js')
    block customlibs

  body
    <!-- header section -->
    header
      .container
        .col-xs-12.col-md-6.logo
          a(href='/'): img(src='/images/logo.svg', class='site-logo', alt='Ungerboeck Digital')

    .page-top
      .video-background
        video(autoplay loop class="home-video")
          source(src="https://conference.ungerboeck.com/images/display/videoBG.mp4")
      .conference-image
        img(src="https://conference.ungerboeck.com/images/display/videoOverlay.svg")

    <!-- body section -->
    block content

    <!-- footer section -->
    footer
      .container
        .col-xs-12
          &copy;2016 Ungerboeck Software International
